{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/components/**/*.ts", "src/components/**/*.tsx", "src/index.ts"],
  "exclude": [
    "node_modules", 
    "**/*.stories.tsx", 
    "**/*.test.tsx", 
    "src/**/*.spec.ts",
    "src/pages/**",
    "src/app/**"
  ]
} 